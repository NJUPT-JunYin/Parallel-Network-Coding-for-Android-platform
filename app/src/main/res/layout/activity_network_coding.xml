<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NetworkCodingActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="405dp"
        android:layout_height="744dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_gfm"
                android:layout_width="140dp"
                android:layout_height="42dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="有限域大小(m):" />


            <EditText
                android:id="@+id/et_gfm"
                android:layout_width="68dp"
                android:layout_height="40dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="8"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btn_initgf"
                android:layout_width="143dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:text="初始化有限域" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_block"
                android:layout_width="140dp"
                android:layout_height="42dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="文件块大小(B)：" />

            <EditText
                android:id="@+id/et_blocksize"
                android:layout_width="68dp"
                android:layout_height="40dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="100"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btn_generatefile"
                android:layout_width="143dp"
                android:layout_height="40dp"
                android:layout_marginLeft="18dp"
                android:text="生成随机文件" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_file"
            android:layout_width="140dp"
            android:layout_height="42dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="文件大小(B)：" />

        <EditText
            android:id="@+id/et_filesize"
            android:layout_width="68dp"
            android:layout_height="40dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="600000"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_openfile"
            android:layout_width="143dp"
            android:layout_height="40dp"
            android:layout_marginLeft="22dp"

            android:text="打开文件" />


            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sparsity"
                android:layout_width="140dp"
                android:layout_height="42dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="稀疏度(%):" />

            <EditText
                android:id="@+id/et_sparsity"
                android:layout_width="68dp"
                android:layout_height="40dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="10"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btn_sparsity"
                android:layout_width="143dp"
                android:layout_height="40dp"
                android:layout_marginLeft="22dp"

                android:text="确定稀疏度" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_fileStatue"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="当前未选择文件"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_networkcoding"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="编码测试" />

            <Button
                android:id="@+id/btn_decoding"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="解码测试" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="395dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:textSize="18dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>