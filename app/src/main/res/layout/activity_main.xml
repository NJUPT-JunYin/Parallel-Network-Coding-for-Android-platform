<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hl.testnc.MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:gravity="center">


        <Button
            android:id="@+id/btn_MartixMutiply"
            android:layout_width="240dp"
            android:layout_height="59dp"
            android:text="1.Finite Filed Mutiply Test"
            app:layout_constraintBottom_toTopOf="@+id/btn_coding"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_coding"
            android:layout_width="240dp"
            android:layout_height="59dp"
            android:layout_marginTop="20dp"
            android:text="2.NetworkCoding Test"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/btn_MartixMutiply"
            app:layout_constraintHorizontal_bias="0.0" />

        <Button
            android:id="@+id/btn_coding2"
            android:layout_width="240dp"
            android:layout_height="106dp"
            android:layout_marginTop="20dp"
            android:text="3.PARALLELED LU decomposition Network Coding Test"
            app:layout_constraintBottom_toBottomOf="parent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>